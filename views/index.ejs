</nav>
</div>


        
        <div class="col-8">
<h2>Artworks</h2>
<div class="container">
   <div class="row">
            <% Arts.forEach(function (f) { %>
            <div class="col-md-6 col-sm-8">
            
              <div class="card">

  <div class="card-body">
   <p class="card-text">
    Artwork Name:
    <%= f.name %></p>
     <p class="card-text">
    Production Year:
   <%= f.year %></p>
   <a class="btn btn-success" href="/Arts/<%= f.artworkID %>">Details</a>
              <form action="/Arts/delete" method="POST">
                <input type="hidden" name="artworkID" value="<%= f.artworkID %>">
                <button type="submit" class="btn btn-warning">Delete?</button>
              </form>
              
              
 
</div> 
</div>     
              </div>
            <% })%>
            
             </div>
             </div>
        
          
        </div>
        <!-- /.col-8 -->

        <div class="col-4">
          <h2>Add Artwork</h2>

          <form action="/Arts/create" method="POST">
            <div>
              <label class="form-label"
                >ArtistID:
                <input
                  required="true"
                  name="artistID"
                  type="number"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >ArtworkID:
                <input
                  required="true"
                  name="artworkID"
                  type="number"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >GalleryID:
                <input
                  required="true"
                  name="galleryID"
                  type="number"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Name:
                <input
                  required="true"
                  name="name"
                  type="text"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Year:
                <input
                  required="true"
                  name="year"
                  type="number"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Movement:
                <input
                  required="true"
                  name="movement"
                  type="number"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Status:
                <input
                  required="true"
                  name="status"
                  type="number"
                  class="form-control"
              /></label>
            </div>

            <button type="submit" class="btn btn-outline-success">Create</button>
          </form>
        </div>
        <!-- /.col-4 -->
      </main>

      <footer>
        <div id="connect1" class="container-fluid padding">
      <div class="row connect text-center">
        <div class="col-12">
          <br />
          
          <hr style="width: 100%; text-align: center; margin-left: 20" />
         
            Made by Yihong Wang & Jiayi Ning
            <br />
            @2021 All Rights Reserved
        </div>
      </div>
    </div>
   

      </footer>
    </div>
  </body>
</html>
